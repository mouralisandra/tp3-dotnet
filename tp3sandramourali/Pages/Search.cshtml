@model Tuple<Person, bool, bool>

@{
    ViewData["Title"] = "Search Person";
}

<section>
    <h2>
        Find a person using their first name & country
    </h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Person" asp-action="Search" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Item1.FirstName" class="control-label"></label>
                    <input asp-for="Item1.FirstName" name="firstName" type="text" class="form-control">
                    <span asp-validation-for="Item1.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item1.Country" class="control-label"></label>
                    <input asp-for="Item1.Country" name="country" type="text" class="form-control">
                    <span asp-validation-for="Item1.Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
    @{
        if (Model != null && !Model.Item2)
        {
            <div class="text-danger">
                Invalid data format
            </div>
        }
        else if (Model != null && !Model.Item3)
        {
            <div class="text-danger">
                Person not found.
            </div>
        }
    }
</section>